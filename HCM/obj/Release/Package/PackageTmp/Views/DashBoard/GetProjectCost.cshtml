@{
    ViewBag.Title = "GetProjectCost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/highcharts.js" type="text/javascript"></script>
<script src="~/Scripts/exporting.js" type="text/javascript"></script>
<script src="~/Scripts/export-data.js" type="text/javascript"></script>

<script src="~/Scripts/DashBoard/appProjectCost.js" type="text/javascript"></script>

<style>
    .highcharts-exporting-group, .highcharts-title, .highcharts-credits {
        display: none;
    }
</style>

<div class="row" data-ng-controller="ProjectCostController">

    <div class="body_wrapper container">

        <div class="section" style="padding: 10px 0 0 0;">

            <div class="row">

                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">
                                <i class="material-icons left">attach_money</i> Project Cost                                     
                                    <div class="clear"></div>
                            </span>
                            <div class="min_height_table" style="height: 300px; min-height: 300px;">
                                <table class="responsive-table striped low_td_padding">
                                    <thead>
                                        <tr style="background-color: #f2f2f2;">
                                              <th data-ng-click="sortByPC('Product.ProductName')"><span class="left">Product</span><i class="material-icons">unfold_more</i></th>
                                            <th data-ng-click="sortByPC('Module.ModuleName')"><span class="left">Module</span><i class="material-icons">unfold_more</i></th>
                                            <th data-ng-click="sortByPC('WorkStream.WorkStreamName')"><span class="left">WorkStream</span><i class="material-icons">unfold_more</i></th>
                                            <th data-ng-click="sortByPC('Area.AreaName')"><span class="left">Area</span> <i class="material-icons">unfold_more</i></th>

                                            <th style="min-width: 100px;" data-ng-click="sortByPC('ProjectManagement')"><span class="left">Project Management</span><i class="material-icons">unfold_more</i></th>
                                            <th style="min-width: 100px;" data-ng-click="sortByPC('ChangeManagement')"><span class="left">Change Management</span><i class="material-icons">unfold_more</i></th>
                                            <th style="min-width: 100px;" data-ng-click="sortByPC('BusinessAnalyst')"><span class="left">Business Analyst</span> <i class="material-icons">unfold_more</i></th>

                                            <th style="min-width: 100px;" data-ng-click="sortByPC('Configuration')"><span class="left">Configuration</span><i class="material-icons">unfold_more</i></th>
                                            <th style="min-width: 100px;" data-ng-click="sortByPC('Testing')"><span class="left">Testing </span><i class="material-icons">unfold_more</i></th>
                                            <th style="min-width: 100px;" data-ng-click="sortByPC('Training')"><span class="left">Training</span> <i class="material-icons">unfold_more</i></th>
                                            <th style="min-width: 100px;" data-ng-click="sortByPC('TotalSolution')"><span class="left">Total Solution</span> <i class="material-icons">unfold_more</i></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr data-ng-repeat="prjectCost in FinancialProjectCostListModel | orderBy:sortpropertyNamePC:sortorderPC">
                                            <td>{{prjectCost.Product.ProductName}}</td>
                                            <td>{{prjectCost.Module.ModuleName}}</td>
                                            <td>{{prjectCost.WorkStream.WorkStreamName}}</td>
                                            <td>{{prjectCost.Area.AreaName}}</td>
                                            <td>{{prjectCost.ProjectManagement | currency}}</td>
                                            <td>{{prjectCost.ChangeManagement | currency}}</td>
                                            <td>{{prjectCost.BusinessAnalyst | currency}}</td>
                                            <td>{{prjectCost.Configuration | currency}}</td>
                                            <td>{{prjectCost.Testing | currency}}</td>
                                            <td>{{prjectCost.Training | currency}}</td>
                                            <td>{{prjectCost.TotalSolution | currency}}</td>
                                        </tr>


                                        <tr class="summary_row" data-ng-repeat="prjectCost in FinancialProjectCostListSummaryModel">

                                            <td colspan="4" style="text-align: center;">{{prjectCost.Area.AreaName}}</td>
                                            <td>{{prjectCost.ProjectManagement  | currency}}</td>
                                            <td>{{prjectCost.ChangeManagement  | currency}}</td>
                                            <td>{{prjectCost.BusinessAnalyst  | currency}}</td>
                                            <td>{{prjectCost.Configuration  | currency}}</td>
                                            <td>{{prjectCost.Testing  | currency}}</td>
                                            <td>{{prjectCost.Training  | currency}}</td>
                                            <td>{{prjectCost.TotalSolution | currency}}</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

               <div class="row">

                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">
                                <i class="material-icons left">insert_chart</i> Project Cost Chart                                       
                                    <div class="clear"></div>
                            </span>

                            <div id="ProjectCost" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

        @Html.Hidden("GetDashBoardFinancialProjectCost", Url.Action("GetDashBoardFinancialProjectCost", "DashBoard"))
       
        @Html.Hidden("CheckSession", Url.Action("CheckSession", "Login"))
        @Html.Hidden("Logout", Url.Action("Logout", "Login"))

    </div>

</div>


